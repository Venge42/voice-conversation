GOOGLE_API_KEY=
WEBSOCKET_SERVER= # Options: 'fast_api' or 'websocket_server'

# Audio configuration to prevent broken voice issues
AUDIO_BUFFER_SIZE=4096 # Larger buffer for stability (default: 4096)
AUDIO_SAMPLE_RATE=16000 # Sample rate in Hz (default: 16000)
VAD_THRESHOLD=0.5 # Voice activity detection sensitivity (0.0-1.0, default: 0.5)
WEBSOCKET_PING_INTERVAL=30 # Keep connection alive (seconds, default: 30)

# Logging configuration
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR (default: INFO)